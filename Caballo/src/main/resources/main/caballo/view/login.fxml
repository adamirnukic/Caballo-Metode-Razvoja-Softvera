<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="main.caballo.controller.LoginController"
            prefWidth="1200" prefHeight="600"
            stylesheets="@app.css"
            styleClass="app-root">

    <center>
        <VBox alignment="CENTER" spacing="16">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <VBox maxWidth="420" spacing="14" styleClass="card">
                <VBox spacing="4">
                    <Label text="Caballo" styleClass="app-title"/>
                    <Label text="Prijavite se za nastavak" styleClass="muted"/>
                </VBox>

                <GridPane hgap="10" vgap="10">
                    <Label text="KorisniÄko ime" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Lozinka" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>

                <Button text="Prijava" maxWidth="Infinity" onAction="#doLogin" styleClass="btn-primary"/>

                <Label fx:id="statusLabel" styleClass="status-error"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
