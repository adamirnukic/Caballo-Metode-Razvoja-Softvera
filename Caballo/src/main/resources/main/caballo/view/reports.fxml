<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="main.caballo.controller.ReportsController"
      spacing="10" prefWidth="1200" prefHeight="600"
      stylesheets="@app.css"
      styleClass="app-root">

    <padding>
        <Insets top="14" right="14" bottom="14" left="14"/>
    </padding>

    <HBox spacing="10" styleClass="app-header">
        <VBox spacing="2">
            <Label text="Izvještaji" styleClass="app-title"/>
            <Label text="Dnevni pregled i izvoz" styleClass="muted"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Nazad" onAction="#goBack" styleClass="btn-secondary"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="card toolbar">
        <Label text="Datum:" styleClass="muted"/>
        <DatePicker fx:id="datePicker"/>
        <Button text="Učitaj" onAction="#loadData" styleClass="btn-primary"/>
        <Button text="Izvezi Dnevni PDF" onAction="#export" styleClass="btn-secondary"/>
        <Button text="Zatvori dan" onAction="#onCloseDayClicked" styleClass="btn-danger"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Label fx:id="totalLabel" text="0.00 KM" styleClass="app-title"/>
    </HBox>

    <HBox spacing="10" styleClass="content" VBox.vgrow="ALWAYS">

        <VBox styleClass="card" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <TableView fx:id="dailyItemsTable" editable="true" VBox.vgrow="ALWAYS" prefHeight="520.0">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>

                <columns>
                    <TableColumn fx:id="colItemName" text="Artikal" prefWidth="150.0"/>
                    <TableColumn fx:id="colOpeningQty" text="Početni" prefWidth="70.0"/>
                    <TableColumn fx:id="colReceivedQty" text="Primljeno" prefWidth="70.0"/>
                    <TableColumn fx:id="colSoldQty" text="Prodano" prefWidth="70.0"/>
                    <TableColumn fx:id="colExpectedClosingQty" text="Očekivano" prefWidth="80.0"/>
                    <TableColumn fx:id="colPhysicalClosingQty" text="Fizičko" prefWidth="80.0"/>
                    <TableColumn fx:id="colSoldTotalAmount" text="Ukupno (KM)" prefWidth="90.0"/>
                    <TableColumn fx:id="colNote" text="Napomena" prefWidth="150.0"/>
                </columns>
            </TableView>
        </VBox>

        <VBox spacing="10" prefWidth="360" minWidth="320" maxWidth="420" VBox.vgrow="ALWAYS">
            <VBox spacing="8" styleClass="card" VBox.vgrow="ALWAYS">
                <Label text="Najprodavaniji artikli" styleClass="card-title"/>
                <ListView fx:id="topItemsList" VBox.vgrow="ALWAYS"/>
            </VBox>

            <VBox spacing="8" styleClass="card" VBox.vgrow="ALWAYS">
                <Label text="Prodaja po konobaru" styleClass="card-title"/>
                <ListView fx:id="salesByWaiterList" VBox.vgrow="ALWAYS"/>
            </VBox>
        </VBox>

    </HBox>
</VBox>
