<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="main.caballo.controller.DashboardController"
      spacing="12" prefWidth="1200" prefHeight="600"
      stylesheets="@app.css"
      styleClass="app-root">

    <padding>
        <Insets top="14" right="14" bottom="14" left="14"/>
    </padding>

    <HBox spacing="10" styleClass="app-header">
        <VBox spacing="3">
            <Label text="Kontrolna ploča" styleClass="app-title"/>
            <Label fx:id="welcomeLabel" styleClass="muted"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="usersBtn" text="Korisnici (Admin)" onAction="#openUsers" styleClass="btn-secondary"/>
        <Button text="Smjene" onAction="#openShifts" styleClass="btn-secondary"/>
        <Button text="Izvještaji" onAction="#openReports" styleClass="btn-secondary"/>
        <Button text="Odjava" onAction="#logout" styleClass="btn-secondary"/>
    </HBox>

    <VBox spacing="10" styleClass="content">
        <Label text="Brze radnje" styleClass="card-title"/>

        <HBox spacing="12">
            <VBox spacing="10" styleClass="card" HBox.hgrow="ALWAYS">
                <Label text="Meni" styleClass="card-title"/>
                <Label text="Upravljanje artiklima, cijenama i zalihama." styleClass="muted" wrapText="true"/>
                <Button text="Otvori Meni" onAction="#openMenu" styleClass="btn-primary"/>
            </VBox>

            <VBox spacing="10" styleClass="card" HBox.hgrow="ALWAYS">
                <Label text="Narudžbe" styleClass="card-title"/>
                <Label text="Kreiraj i pregledaj narudžbe." styleClass="muted" wrapText="true"/>
                <Button text="Otvori Narudžbe" onAction="#openOrders" styleClass="btn-primary"/>
            </VBox>

            <VBox spacing="10" styleClass="card" HBox.hgrow="ALWAYS">
                <Label text="Rezervacije" styleClass="card-title"/>
                <Label text="Planiranje stolova i dnevnih rezervacija." styleClass="muted" wrapText="true"/>
                <Button text="Otvori Rezervacije" onAction="#openReservations" styleClass="btn-primary"/>
            </VBox>
        </HBox>

        <Separator/>

        <HBox spacing="12">
            <VBox spacing="8" styleClass="card" HBox.hgrow="ALWAYS">
                <Label text="Najprodavanije (danas)" styleClass="card-title"/>
                <Label fx:id="topItemsEmptyLabel" text="" styleClass="muted" wrapText="true"/>
                <PieChart fx:id="topItemsPieChart" prefHeight="260" legendVisible="true" labelsVisible="true"/>
            </VBox>

            <VBox spacing="8" styleClass="card" HBox.hgrow="ALWAYS">
                <Label text="Male zalihe (pića)" styleClass="card-title"/>
                <Label fx:id="lowStockEmptyLabel" text="" styleClass="muted" wrapText="true"/>
                <ListView fx:id="lowStockList" prefHeight="260" />
                <HBox spacing="10">
                    <Button text="Otvori Meni" onAction="#openMenu" styleClass="btn-primary" />
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</VBox>
