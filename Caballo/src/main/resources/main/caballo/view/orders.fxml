<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.caballo.controller.OrdersController"
            prefWidth="1200" prefHeight="600"
            stylesheets="@app.css"
            styleClass="app-root">

    <padding>
        <Insets top="14" right="14" bottom="14" left="14"/>
    </padding>

    <top>
        <HBox spacing="10" styleClass="app-header">
            <VBox spacing="2">
                <Label text="Orders" styleClass="app-title"/>
                <Label text="Create new orders and review recent ones" styleClass="muted"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="New Order" onAction="#newOrder" styleClass="btn-primary"/>
            <Button text="Back" onAction="#goBack" styleClass="btn-secondary"/>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.25, 0.65" styleClass="content">
            <VBox spacing="10" styleClass="card">
                <Label text="Recent Orders" styleClass="card-title"/>
                <TableView fx:id="ordersTable">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>

                    <columns>
                        <TableColumn fx:id="orderDateCol" prefWidth="160" text="Date"/>
                        <TableColumn fx:id="orderTotalCol" prefWidth="100" text="Total"/>
                    </columns>
                </TableView>
            </VBox>

            <VBox spacing="10" styleClass="card">
                <Label text="Items" styleClass="card-title"/>
                <TableView fx:id="itemsTable">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>

                    <columns>
                        <TableColumn fx:id="itemNameCol" prefWidth="150" text="Item"/>
                        <TableColumn fx:id="itemQtyCol" prefWidth="60" text="Qty"/>
                        <TableColumn fx:id="itemPriceCol" prefWidth="80" text="Price"/>
                        <TableColumn fx:id="itemSumCol" prefWidth="90" text="Sum"/>
                    </columns>
                </TableView>
            </VBox>

            <VBox spacing="10" styleClass="card">
                <Label text="Add Item" styleClass="card-title"/>

                <HBox spacing="8" styleClass="toolbar">
                    <Label text="Search" styleClass="muted"/>
                    <TextField fx:id="searchMenuField" HBox.hgrow="ALWAYS"/>
                </HBox>

                <TableView fx:id="menuTable" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>

                    <columns>
                        <TableColumn fx:id="menuNameCol" prefWidth="180" text="Name"/>
                        <TableColumn fx:id="menuCatCol" prefWidth="120" text="Category"/>
                        <TableColumn fx:id="menuPriceCol" prefWidth="80" text="Price"/>
                    </columns>
                </TableView>

                <HBox spacing="8" styleClass="toolbar">
                    <Label text="Qty" styleClass="muted"/>
                    <TextField fx:id="qtyField" prefWidth="80"/>
                    <Button text="Add Item" onAction="#addItem" styleClass="btn-primary"/>
                </HBox>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
