<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="main.caballo.controller.ReportsController" spacing="10" prefWidth="1200" prefHeight="600">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10">
        <Label text="Reports" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Back" onAction="#goBack"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Date:"/>
        <DatePicker fx:id="datePicker"/>
        <Button text="Load" onAction="#loadData"/>
        <Button text="Export Daily PDF" onAction="#export"/>
        <Button text="Close Day" onAction="#onCloseDayClicked"/>
    </HBox>

    <Label fx:id="totalLabel" text="Total: 0.00 BAM" style="-fx-font-weight: bold;"/>

    <TableView fx:id="dailyItemsTable" prefHeight="500.0" editable="true">
        <columns>
            <TableColumn fx:id="colItemName" text="Artikal" prefWidth="150.0"/>
            <TableColumn fx:id="colOpeningQty" text="Početni" prefWidth="70.0"/>
            <TableColumn fx:id="colReceivedQty" text="Primljeno" prefWidth="70.0"/>
            <TableColumn fx:id="colSoldQty" text="Prodano" prefWidth="70.0"/>
            <TableColumn fx:id="colExpectedClosingQty" text="Očekivano" prefWidth="80.0"/>
            <TableColumn fx:id="colPhysicalClosingQty" text="Fizičko" prefWidth="80.0"/>
            <TableColumn fx:id="colSoldTotalAmount" text="Ukupno (KM)" prefWidth="90.0"/>
            <TableColumn fx:id="colNote" text="Napomena" prefWidth="150.0"/>
        </columns>
    </TableView>

    <SplitPane dividerPositions="0.5">
        <VBox spacing="6">
            <Label text="Top Items"/>
            <ListView fx:id="topItemsList"/>
        </VBox>
        <VBox spacing="6">
            <Label text="Sales by Waiter"/>
            <ListView fx:id="salesByWaiterList"/>
        </VBox>
    </SplitPane>
</VBox>
